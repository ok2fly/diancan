  <!-- 查询产品编号的最大值 -->
  <select id="getMaxProductNo" resultType="int">
    SELECT
    IFNULL(
    MAX(
    CONVERT(SUBSTRING(t.`product_no`, 2), SIGNED)
    ),
    0
    )
    FROM
    `gcfd_product` t ;
  </select>
